<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.SkillLearn" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="fontFamily"></item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="materialButtonStyle">@style/Widget.SkillLearn.Button</item>
        <item name="cardViewStyle">@style/Widget.SkillLearn.CardView</item>
    </style>

    <style name="Theme.SkillLearn" parent="Base.Theme.SkillLearn" />

    <style name="Widget.SkillLearn.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="Widget.SkillLearn.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">3dp</item>
        <item name="contentPadding">0dp</item>
    </style>
</resources>